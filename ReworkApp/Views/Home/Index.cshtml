@model ReworkApp.Entities.Usuario

@{
    ViewData["Title"] = "Iniciar Sesión";
    Layout = "~/Views/Shared/_LayoutExterno.cshtml";
}

<div class="text-center">
    <div>
        <a class="hiddenanchor" id="signup"></a>
        <a class="hiddenanchor" id="signin"></a>

        <div class="login_wrapper">
            <div class="animate form login_form">
                <section class="login_content">

                    
                    <h1>Inicio de sesión</h1>

                    @if (ViewBag.msj != null)
                    {
                        <div class="alert alert-secondary" style="text-align:center" role="alert">
                            @ViewBag.msj
                        </div>
                    }

                    @using (Html.BeginForm("Index", "Home"))
                    {
                        <div>
                            @Html.TextBoxFor(m => m.Correo, new { @type = "email", @class = "form-control", @placeholder = "Correo Electrónico" })
                        </div>
                        <div>
                            @Html.TextBoxFor(m => m.Contrasenna, new { @type = "password", @class = "form-control", @placeholder = "Contraseña" })
                        </div>
                        <div>
                            <button type="submit" class="btn btn-default submit">Ingresar</button>
                            <a class="reset_pass" href="@Url.Action("RecuperarAcceso","Home")">Recuperar contraseña</a>
                        </div>

                        <div class="clearfix"></div>
                    }

                    <p class="mb-0">
                        <a href="@Url.Action("Registrar","Home")" class="text-center">Quiero registrarme</a>
                    </p>
                    <br />

                    <div>

                        <p>©2024 Todos los derechos reservados.</p> Privacidad y términos</p>
                    </div>
            </div>


            </section>
        </div>
    </div>
</div>
    </div>
