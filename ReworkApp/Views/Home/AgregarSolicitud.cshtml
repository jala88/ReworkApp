@{
    ViewData["Title"] = "Pagina principal";
}

<!-- page content -->
<div class="right_col col-md-10 col-sm-10 container body" role="main">

    
    <div class="row">
        <div class="col-md-10 col-sm-10 ">

            <div class="dashboard_graph">

                <div class="row x_title">
                    <div class="col-md-6 ">
                        <h3>Registre una nueva Solicitud</h3>
                    </div>
                </div>

            </div>
            
        </div>

        <div class="card col-md-5 col-sm-8 align-content-center">
            <div class="card-header">
                Solicitud
            </div>
            <br />
            <div class="mb-3">
                <label for="exampleFormControlInput1" class="form-label">Part Number</label>
                <input class="form-control" id="exampleFormControlInput1" placeholder="#1215">
            </div>
            <div class="mb-3">
                <label for="exampleFormControlInput1" class="form-label">Serial Number</label>
                <input class="form-control" id="exampleFormControlInput1" placeholder="#1215">
            </div>
            <div class="mb-3">
                <label for="exampleFormControlInput1" class="form-label">Repair Order</label>
                <input class="form-control" id="exampleFormControlInput1" placeholder="#1215">
            </div>
            <label for="exampleFormControlInput1" class="form-label">Tipo de Rework</label>
                <select class="form-select" aria-label="Default select example">
                
                    <option selected>Tipos de Rework</option>
                    <option value="1">One</option>
                    <option value="2">Two</option>
                    <option value="3">Three</option>
                </select>
            <br />
            <div class="mb-3">
                <label for="exampleFormControlTextarea1" class="form-label">Comentario</label>
                <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
            </div>
            <div class="col-auto">
                <a href="@Url.Action("Solicitudes","Home")" type="submit" class="btn btn-primary mb-3">Registrar</a>
            </div>
        </div>

       
    </div>
    <br />

</div>
<!-- /page content -->
